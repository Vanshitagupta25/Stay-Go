<% layout("/layouts/boilerplate") %>
  <h3>Create a new listing</h3>
  <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

    <div class="row mb-4">
      <div class="col-8 offset-2">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input placeholder="Add title" name="listing[title]" type="text" class="form-control" required/>

          <div class="valid-feedback">Title is Awesome</div>
         </div>
 
         <div class="mb-3">
           <label for="description" class="form-label">Description</label>
           <textarea placeholder="Add description" name="listing[description]" class="form-control "required></textarea>
        </div>

         <div class="mb-3">
           <label for="image" class="form-label">Upload Listing Image</label>
           <input name="image" type="file" class="form-control"
           required>
         </div>
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input placeholder="1200" name="listing[price]" class="form-control"required>

            <div class="invalid-feedback">
              Please enter a valid price
            </div>
           </div>
    
            <div class="mb-3 col-8">
              <label for="country"  class="form-label">Country</label>
              <input placeholder="India"type="text" , name="listing[country]" class="form-control"required>

              <div class="invalid-feedback">
                Please enter a valid country name
              </div>
             </div>
   
              <div class="mb-3">
                <label for="location" class="form-location">Location</label>
                <input placeholder="Indore"type="text" name="listing[location]" class="form-control"required>

                <div class="invalid-feedback">
                  Location should be valid
                </div>
              </div>
              <div class="mb-3">
                <label for="category" class form-label>Category</label>
                <select name="listing[category]" class="form-control" required>
                  <option value="">Select Category</option>
                  <option value="mountains">Mountain</option>
                  <option value="rooms">Rooms</option>
                  <option value="pools">Pools</option>
                  <option value="beach">Beach</option>
                  <option value="farms">Farms</option>
                  <option value="camping">Camping</option>
                  <option value="domes">Domes</option>
                  <option value="iconicCities">Iconic cities</option>
                  <option value="bedAndBreakfast">Bed & Breakfast</option>
                </select>
              </div>
 
              <button class="btn btn-dark add-btn">Add</button><br><br>


      </div>
    </div>
</form>

</body>
</html>